{
  "manifest_version": 3,
  "name": "XBooster",
  "version": "1.0.1",
  "description": "自动阅读帖子内容并生成翻译和评论",
  "privacy_policy": "https://raw.githubusercontent.com/eggyrooch-blip/XBooster/main/PRIVACY_POLICY.md",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://pro.x.com/*",
    "https://api.openai.com/*",
    "https://api.siliconflow.cn/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://pro.x.com/*"
      ],
      "js": ["content.js", "x-inline.js", "bulk-reply.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "emotions.json"
      ],
      "matches": ["https://x.com/*"]
    }
  ]
}
